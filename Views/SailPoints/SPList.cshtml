@model MyShop.Models.SalePoint

@{
    ViewData["Title"] = "SPList";
}
@{
    List<SalePoint> data = ViewBag.SailPoints;
}

<h1>SPList</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("выбери меня", // <-- Link text
                 "OpenPoint", // <-- Action Method Name
                 "SailPoints", // <-- Controller Name
                 new { id = item.Id}, // <-- Route value
                 new { @class = "ui-btn" } // <-- htmlArguments
                 )

                </td>
            </tr>
        }
    </tbody>
</table>
